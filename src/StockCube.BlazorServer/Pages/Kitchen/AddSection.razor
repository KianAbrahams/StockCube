@using StockCube.UI.Kitchen;
@using StockCube.UI;
@page "/AddSection"
@inject IAddSectionViewModel vm;

<MudText Class="mb-2" Typo="Typo.h2">Add Section</MudText>

<MudCard>
    <MudForm >
        <MudCardContent >
            <MudTextField Label="Section Name" @bind-Value="@vm.Name" />
        </MudCardContent>
    </MudForm>
</MudCard>
<MudButton class="mb-2 mt-2" Typo="Typo.subtitle1" @onclick="() => vm.SaveCommand.ExecuteAsync(null)" Variant="Variant.Filled" Color="Color.Primary">Save Section</MudButton>
<MudButton class="mb-2 mt-2" Typo="Typo.subtitle1" href="/Kitchen" Variant="Variant.Filled" Color="Color.Primary">Cancel</MudButton>
